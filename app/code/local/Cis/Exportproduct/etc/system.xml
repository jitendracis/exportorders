<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <cis_exportproduct translate="label" module="exportproduct">
            <label>Exportproduct Extension</label>
            <sort_order>500</sort_order>
        </cis_exportproduct>
    </tabs>
    <sections>
        <exportproduct translate="label" module="exportproduct">
            <label>Exportproduct Setting</label>
            <tab>cis_exportproduct</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <exportproduct_group translate="label" module="supplier">
                    <label>Exportproduct Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                          
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable>
                        <email_template>
                            <label>Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </email_template>
                    </fields>
                </exportproduct_group>
            </groups>
        </exportproduct>
    </sections>
</config>